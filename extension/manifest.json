{
    "manifest_version": 2,
    "name": "EzEdit",
    "description": "EzEdit your websites online without code and wait for the changes to reflect everywhere.",
    "version": "1.0.0",
    "icons": {
        "16": "logo16.png",
        "32": "logo32.png",
        "48": "logo48.png",
        "128": "logo128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*/*"
            ],
            "js": [
                "contentScript.js",
                "bootstrap.min.js"
            ],
            "css": [
                "bootstrap.min.css",
                "style.css"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab"
    ]
}